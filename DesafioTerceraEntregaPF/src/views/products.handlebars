<!-- Cart Section Start -->
<section class="cart-section section-b-space">
    <div class="container-fluid-lg">
        <div class="row g-sm-5 g-3">
            <div class="col-xxl-3">
                <div class="summery-box p-sticky">
                    <div class="summery-header">
                        <h3 id="formTitle">Ingrese un producto</h3>
                    </div>

                    <div class="summery-contain">
                        <div class="coupon-cart">
                            <form class="row g-4" id="productForm">
                                <input type="hidden" name="id" id="id" value="">
                                <div class="col-12 col-lg-6">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Título" required>
                                        <label for="name">Título</label>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input type="text" class="form-control" id="description" name="description" placeholder="Descripción" required>
                                        <label for="description">Descripción</label>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input type="text" class="form-control" id="code" name="code" placeholder="Código" required>
                                        <label for="code">Código</label>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input type="text" class="form-control" id="price" name="price" placeholder="Precio" required>
                                        <label for="price">Precio</label>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input type="text" class="form-control" id="stock" name="stock" placeholder="Stock" required>
                                        <label for="stock">Stock</label>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input type="text" class="form-control" id="image" name="image" placeholder="Link de miniatura" required>
                                        <label for="image">Link de miniatura</label>
                                    </div>
                                </div>
                                <div class="col-12 d-flex flex-wrap">
                                    <button id="btn-save" class="btn btn-animation fw-bold proceed-btn">Agregar producto</button>
                                    <button type="button" id="btn-cancel" class="btn btn-2-animation btn-animation fw-bold proceed-btn ms-2 d-none">Cancelar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xxl-9">
                <div class="cart-table">
                    <div class="table-responsive-xl">
                        <table class="table" id="tableProducts">
                            <tbody>
                                {{#each products}}
                                <tr class="product-box-contain" data-tr-id="{{id}}">
                                    <td class="product-detail">
                                        <div class="product border-0">
                                            <a href="#" class="product-image">
                                                <img src="{{image}}"
                                                    class="img-fluid blur-up lazyload" alt="{{name}}">
                                            </a>
                                            <div class="product-detail">
                                                <ul>
                                                    <li class="name"><a href="#">{{name}}</a></li>
                                                    <!--<li class="text-content"><span class="text-title">Categoría:</span> cat</li>-->
                                                    <li class="text-content"><span class="text-title">Código:</span> {{code}}</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <h4 class="table-title text-content">Descripción</h4>
                                        <h5>{{description}}</h5>
                                    </td>

                                    <td class="price">
                                        <h4 class="table-title text-content">Precio</h4>
                                        <h5>${{price}}</h5>
                                    </td>

                                    <td class="price">
                                        <h4 class="table-title text-content">Stock</h4>
                                        <h5>{{stock}}</h5>
                                    </td>

                                    <td class="save-remove">
                                        <h4 class="table-title text-content">Acciones</h4>
                                        <a href="#" data-id="{{id}}" data-id="{{id}}" class="edit px-1 mx-2 btn-edit">
                                            <i class="fas fa-edit btn-edit" data-id="{{id}}"></i>
                                        </a>
                                        <a href="#" data-id="{{id}}" data-id="{{id}}" class="remove px-1 mx-2 btn-delete">
                                            <i class="fas fa-trash btn-delete" data-id="{{id}}"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
