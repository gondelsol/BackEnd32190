<!-- Shop Section Start -->
<section class="section-b-space shop-section">
    <div class="container-fluid-lg">
        <div class="row">
            <div class="col-12">
                <div class="row g-sm-4 g-3 row-cols-xxl-5 row-cols-xl-3 row-cols-lg-2 row-cols-md-3 row-cols-2 product-list-section"
                    id="products">
                    {{#if products.length}}
                    {{#each products}}
                    <div>
                        <div class="product-box-3 h-100 wow fadeInUp">
                            <div class="product-header">
                                <div class="product-image">
                                    <a href="/productos/detalle/{{this.id}}">
                                        <img src="{{this.image}}" class="img-fluid blur-up lazyload" alt="">
                                    </a>

                                    <ul class="product-option">
                                        <li data-bs-toggle="tooltip" data-bs-placement="top" title="Ver">
                                            <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#md-{{this.id}}">
                                                <i data-feather="eye"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="product-footer">
                                <div class="product-detail">
                                    {{! próximo a implenetar: categoría
                                    <span class="span-name">Vegetable</span>
                                    }}
                                    <a href="product-left.html">
                                        <h5 class="name">{{this.name}}</h5>
                                    </a>
                                    <p class="text-content mt-1 mb-2 product-content">{{this.description}}</p>
                                    {{!-- <h6 class="unit">250 ml</h6> --}}
                                    <h5 class="price"><span class="theme-color">${{this.price}}</span>
                                        {{!<del>$15.15</del>}}
                                    </h5>
                                    <div class="add-to-cart-box bg-white">
                                        <button class="btn btn-add-cart addcart_button" data-id="{{this.id}}">Agregar
                                            <i class="fa-solid fa-plus bg-gray addcart_button"
                                                data-id="{{this.id}}"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal -->
                    <!-- Quick View Modal Box Start -->
                    <div class="modal fade theme-modal view-modal" id="md-{{this.id}}" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-xl modal-fullscreen-sm-down">
                            <div class="modal-content">
                                <div class="modal-header p-0">
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                        <i class="fa-solid fa-xmark"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="row g-sm-4 g-2">
                                        <div class="col-lg-6">
                                            <div class="slider-image">
                                                <img src="{{this.image}}"
                                                    class="img-fluid blur-up lazyload" alt="">
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <div class="right-sidebar-modal">
                                                <h4 class="title-name">{{this.name}}</h4>
                                                <h4 class="price">${{this.price}}</h4>

                                                <div class="product-detail">
                                                    <h4>Detalles del producto:</h4>
                                                    <p>{{this.description}}</p>
                                                </div>
                                                <div class="modal-button">
                                                    <button class="btn btn-md add-cart-button icon addcart_button" data-id="{{this.id}}">Agregar al carrito</button>
                                                    <button onclick="location.href = '/productos/detalle/{{this.id}}';"
                                                        class="btn theme-bg-color view-button icon text-white fw-bold btn-md">Ver más detalles</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Quick View Modal Box End -->

                    {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Section End -->

