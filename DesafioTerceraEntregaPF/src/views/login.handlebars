<!-- log in section start -->
<section class="log-in-section background-image-2 section-b-space">
    <div class="container-fluid-lg w-100">
        <div class="row">
            <div class="col-xxl-4 col-lg-6 offset-lg-3 offset-xxl-4 me-auto">
                <div class="log-in-box">
                    <div class="log-in-title">
                        <h3>Bienvenido</h3>
                        <h4>Iniciar sesión</h4>
                    </div>
                    <div id="errMsg"></div>
                    <div class="input-box">
                        <form class="row g-4" id="formLogin">
                            <div class="col-12">
                                <div class="form-floating theme-form-floating log-in-form">
                                    <input type="username" class="form-control" id="username" name="username" placeholder="Email" required>
                                    <label for="username">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating theme-form-floating log-in-form">
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="Contraseña" required>
                                    <label for="password">Contraseña</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-animation w-100 justify-content-center" type="submit" id="btnEnviar">Iniciar sesión</button>
                            </div>
                        </form>
                    </div>
                    <div class="sign-up-box">
                        <h4>¿No tienes cuenta?</h4>
                        <a href="/signup" class="forgot-password">Registrarse</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- log in section end -->

